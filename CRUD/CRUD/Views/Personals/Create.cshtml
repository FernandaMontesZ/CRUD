                                    alert("Mensaje: " + req.Message);
                                    alert("Tipo excepción: " + req.ExceptionType);
                                }
                            });
                            return false;
                        },
                        error: function () {
                            alert("Error Ingresando al personal");
                        }
                    });
                    return false;
                });
            });


            function LoadData() {
                $("#tblPersonal tbody tr").remove();

            }

        </script>
    </div>
    }
        <div>
        @Html.ActionLink("Volver a información", "Index")
    </div>
</body>
</html>


